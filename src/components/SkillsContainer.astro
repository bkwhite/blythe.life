---
import type { TechName } from "../tech";

import TechLogo from "./TechLogo.astro";

interface Props {
	size?: "small" | "large";
	techStack: TechName[];
}

const { size, techStack } = Astro.props;
---

<div
	class:list={[
		"skills-container",
		{ small: size === "small", large: size === "large" },
	]}>
	{(techStack || []).map((techName) => <TechLogo techName={techName} />)}
</div>

<style is:global>
	.skills-container {
		display: grid;
		grid-template-columns: 1fr 1fr 1fr 1fr;
		gap: 16px;
		margin-bottom: calc(var(--basePadding) * 2);
	}

	.skills-container.small {
		display: flex;
		flex-direction: row;
		justify-content: flex-start;
		flex-wrap: wrap;
		gap: 12px;
		width: 100%;
	}

	.skills-container.small > img {
		width: 46px;
	}
</style>
