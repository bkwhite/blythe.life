---
import type { MarkdownInstance } from "astro";
import type { TechName } from "../tech";

import SiteSection from "../components/SiteSection.astro";
import SkillsContainer from "../components/SkillsContainer.astro";

interface Skill {
	title: "Love";
	techStack: TechName[];
}

const skills = Object.values(
	import.meta.glob("../content/skills/*.md", { eager: true })
) as MarkdownInstance<Skill>[];

console.log(skills);
---

<SiteSection sectionName="skills">
	{skills.map(({ Content, ...skill }) => (
		<>
			<Content />
			<SkillsContainer
				size="large"
				techStack={skill.frontmatter.techStack}
			/>
		</>
	))}
</SiteSection>
